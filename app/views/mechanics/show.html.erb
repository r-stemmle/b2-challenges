<header>
  <h3>Mechanic Show Page</h3>
</header>

<body>
  <div class="">
    <span>Mechanic:  <%= @mechanic.name %></span><br>
    <span>Years experience: <%= @mechanic.years_exp %></span><br>
  </div>

  <ul>
    <h4>Rides <%= @mechanic.name %> is working on:  </h4>
    <p>
      <% @rides.each do |ride| %>
        <%= ride.name if ride.is_open %><br>
      <% end %>
    </p>
  </ul>

  <section>
    <h4>Add a ride to workload:</h4>
    <%= form_with  %>
  </section>
</body>
